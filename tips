-----------------------------------------------EXEMPLOS----------------------------------------------------------------
types of print and results
print(12345) = 12345
print('Camila', 'Souza') = Camila Souza
print('Camila', 'Souza', sep='-') = Camila-Souza
print('Camila', 'Souza', sep='-', end='##') = Camila-Souza##
print('824', '123', '789', sep='.', end='-')
print('18') = 824.123.789-18

print('Camila', type('Camila'))
print(21, type(21))
print(21.21, type(21.21))
print(21 > 20, bool(21 > 20))


nome = 'Camila'
idade = 21
tamanho = 1.60

